   <select id="selectBoardNo" parameterType="int" resultMap="boardMapa">
		SELECT T_NO, D_STATE, P_NAME, P_PRICE, M_ID, P_CONTENT, P_RDATE, P_UDATE, CG_NAME, P_delete
		FROM t_product
		WHERE T_NO = #{no}
