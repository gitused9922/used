	<!-- sql : 재사용 할 수 있는 SQL 블럭 -->
	<sql id="searchCondition">
		<trim suffix="AND">
	    	<choose>
	    		<when test="searchType == 'T'.toString()">
	    			p_name LIKE '%'||#{searchKey}||'%'
	    		</when>
	    		<when test="searchType == 'C'.toString()">
	    			p_price LIKE '%'||#{searchKey}||'%'
	    		</when>
	    		<when test="searchType == 'TC'.toString()">
	    			( p_name LIKE '%'||#{searchKey}||'%' OR p_price LIKE '%'||#{searchKey}||'%' )
	    		</when>
	    		<when test="searchType == 'W'.toString()">
	    			m_id LIKE '%'||#{searchKey}||'%'
	    		</when>
	    	</choose>
		</trim>
	</sql> 
	
	 <select id="selectBoardWithPaging" 
			resultType="BoardVO" parameterType="hashmap">
		
		SELECT no 
		, name
		, price 		 
		, rdate 
		, udate 
		, "delete" 
		, userId 
		FROM 
		(
		    SELECT rownum idx
		     		, t_no no
		            , p_name name
					, p_price price
					, p_rdate rdate
					, p_udate udate
					, p_delete "delete"
					, m_id userId
		    FROM t_product
		    WHERE    
		    	<include refid="searchCondition" />
		    	p_delete = '1'		    	
		    	AND <![CDATA[ rownum < #{ end } ]]>
		    	 		    	
		    ORDER BY t_no DESC
		)
		WHERE idx >= #{ beginning } 
		  
		
	</select> 
	<select id="selectBoardCount" parameterType="hashmap" resultType="int">
		SELECT COUNT(*) 
		FROM t_product 
		WHERE 
			<include refid="searchCondition" /> 
			p_delete = '1'
	</select>
	
	
